<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DP_Project.MainPage" NavigationPage.HasNavigationBar="false">
    <ContentPage.Resources>
        <StyleSheet Source="../Assets/styles.css" />
    </ContentPage.Resources>

    <ContentPage.BackgroundColor>
    <Color>#EFFAFF</Color>
    </ContentPage.BackgroundColor>

    <ContentPage.Content>
        <StackLayout StyleId="Flex" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
            <Label Text="Endangered Animals" StyleId="Title" />
            <Label HorizontalOptions="Center" StyleId="Welcome" Text="Welcome to the app where you can check the recent and most Endangered Animals on our planet. Check them out by clicking the button below" />
            <Button Text="Check Animals" StyleId="Button" Clicked="List_Animals" BackgroundColor="#172A3A" TextColor="#EFFAFF" Opacity="0.8"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>